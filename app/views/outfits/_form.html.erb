<%= form_for [@outfit.user, @outfit] do |f| %>

  <%= f.hidden_field :user_id %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <% @categories.each do |category| %>
    <%= render partial: 'categories/category_checklist', locals: {category: category, f: f} %>
  <% end %>


  <h3>Add a new clothing item for this outfit</h3>

    <%= f.fields_for @clothing_item do |c| %>

      <%= render partial: 'clothing_items/form_fields', locals: { clothing_item: @clothing_item, f: c } %>

    <% end %>

  <br> <%= f.submit %>

<% end %>
