<%= form_for [@outfit.user, @outfit] do |f| %>

  <%= f.hidden_field :user_id %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <!--
  clothing checkboxes by category
  including only the clothing items
  owned by the user who's outfit this is
  -->

  <% @categories.each do |category| %>
    <%= render partial: 'categories/category_checklist', locals: {category: category, f: f} %>
  <% end %>

  <%= f.submit %>

<% end %>
